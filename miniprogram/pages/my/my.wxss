/* pages/my/my.wxss */
.user-wrap {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1px dashed rgb(211, 204, 204);
}

.username-wrap {
  background-color: #f2f2f2 !important;
  border-width: 0px !important;

}

.username-wrap::after {
  border: none;
}

.username {
  color: #aaa;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}